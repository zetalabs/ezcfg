# stop LAN side services
# stop ezcfg upnpd
ezcfg_upnpd lan stop

# stop upnp monitor
upnp_monitor lan stop

# stop ezcfg igrsd
ezcfg_igrsd lan stop

# stop freeradius2 server
freeradius2_server lan stop

# stop pppoe server
pppoe_server lan stop

# stop dns/dhcpd service
dnsmasq lan stop

# stop telnet service
telnetd lan stop

# stop ezcfg httpd
ezcfg_httpd lan stop
